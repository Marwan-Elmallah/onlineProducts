    body
        nav(class="navbar navbar-expand-lg navbar-light bg-light navbar navbar-dark bg-dark")
            a.navbar-brand(href="#") Z-CASHER 
            button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
            div.collapse.navbar-collapse#navbarNav
                ul.navbar-nav
                    li.nav-item.active
                        a.nav-link(href="/products/home") Home 
                        span.sr-only.current
                    li.nav-item
                        a.nav-link(href="/listUsers") List Users
                    li.nav-item
                        a.nav-link(href="/") Logout
                    li.nav-item
                        a.nav-link(href="/signUp") Add User
       
        #main.text-center
            span.row.wid.text
                div.card.card-header.m-3
                    form(method="POST", action=`/products/${products._id}`)
                        div.label(style="font-weight:800;color:#515151;font-size: 25px;") Edit Product Form
                            div.input-group.mb-3
                                div.input-group-prepend
                                    span.input-group-text Name
                                input(type="text" class="form-control" name="name" value=`${products.name}`)
                            div.input-group.mb-3
                                div.input-group-prepend
                                    span.input-group-text Price
                                input(type="text" class="form-control" name="price" value=`${products.price}`)
                            div.input-group.mb-3
                                div.input-group-prepend
                                    span.input-group-text Description
                                input(type="text" class="form-control" name="description" value=`${products.description}`)

                        button.btn-dark.my-5.btn-lg(type="submit") Update